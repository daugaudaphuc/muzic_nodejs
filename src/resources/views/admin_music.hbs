        <h2>Music Table</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>id_music</th>
                    <th>poster</th>
                    <th>singer_name</th>
                    <th>name</th>
                    <th>date_add</th>
                    <th>duration</th>
                    <th>image</th>
                    <th>src</th>
                    <th>remove</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                {{#each music}}
                <tr>
                    <td>{{this.id_music}}</td>
                    <td>{{this.poster}}</td>
                    <td>{{this.singer_name}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.date_add}}</td>
                    <td>{{this.duration}}</td>
                    <td>{{this.image}}</td>
                    <td>{{this.src}}</td>
                    <td>
                        <form action="/admin/music/{{this.id_music}}/delete?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger" type="submit">Remove</button>
                        </form>
                    </td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>

        {{!-- Confirm delete course --}}
